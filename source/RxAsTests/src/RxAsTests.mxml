<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	creationComplete="runMe()" 
     xmlns:adobe="http://www.adobe.com/2009/flexUnitUIRunner">
     
     <mx:Script>
     	<![CDATA[
     		import rx.tests.operators.flex.FlexSuite;
     		import org.flexunit.internals.TraceListener;
     		import org.flexunit.listeners.CIListener;
     		import rx.tests.misc.UtilitiesSuite;
     		import rx.flex.IObservableResponder;
     		import mx.rpc.IResponder;
     		import rx.IObservable;
     		import mx.rpc.AsyncToken;
     		import rx.Observable;
     		import rx.tests.subjects.SubjectSuite;
     		import rx.tests.operators.OperatorSuite;
			import org.flexunit.listeners.UIListener;
			import org.flexunit.runner.FlexUnitCore;
			
			private var core:FlexUnitCore;
			
			public function runMe():void {
				core = new FlexUnitCore();
				
				addTestListeners(core);				
				
				core.run( OperatorSuite, FlexSuite, SubjectSuite, UtilitiesSuite );
			}
			
			private function addTestListeners(core : FlexUnitCore) : void
			{
				CONFIG::AUTOMATED
				{
					addAutomatedTestListeners(core);
					return;
				}
				
				addUITestListeners(core);
			}
			
			private function addAutomatedTestListeners(core : FlexUnitCore) : void
			{
				core.addListener(new CIListener());
				core.addListener(new TraceListener());
			}
			
			private function addUITestListeners(core : FlexUnitCore) : void
			{
				core.addListener(new UIListener(uiListener));
			}
     	]]>
     </mx:Script>
     <adobe:TestRunnerBase id="uiListener" width="100%" height="100%"  />
	
</mx:Application>
